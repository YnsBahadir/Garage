@model EntityLayer.Concrete.Product

@{
    ViewData["Title"] = "Ürün Detayı";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 mb-5">
    <div class="card shadow">
        <div class="container-fluid">
            <div class="wrapper row">

                <div class="col-md-6 p-4 d-flex align-items-center justify-content-center bg-light">
                    <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "https://dummyimage.com/600x400/dee2e6/6c757d.jpg" : Model.ImageUrl)"
                         class="img-fluid rounded shadow-sm"
                         style="max-height: 500px; width: auto;" />
                </div>

                <div class="col-md-6 p-5">

                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="badge bg-secondary">Kategori: @Model.Category.CategoryName</span>
                    </div>

                    <h3 class="product-title display-6 fw-bold">@Model.Title</h3>

                    <div class="rating mb-3 text-warning">
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star-half-alt"></i>
                        <span class="text-muted small ms-2">(109 görüntülenme)</span>
                    </div>

                    <p class="product-description text-muted mb-4" style="min-height: 100px;">
                        @Model.Description
                    </p>

                    <h2 class="price fw-bold text-primary mb-4">@Model.Price ₺</h2>

                    <p class="fw-bold"><i class="fas fa-map-marker-alt text-danger"></i> Konum: <span class="fw-normal">@Model.City</span></p>

                    <div class="seller-info p-3 bg-light rounded mb-4 border">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <img src="https://ui-avatars.com/api/?name=Satici&background=random" class="rounded-circle" width="50">
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="mb-0">Satıcı Bilgisi</h6>
                                <small class="text-muted">Üye (Şimdilik Gizli)</small>
                            </div>
                        </div>
                    </div>

                    <div class="action">
                        @if (Model.IsSold)
                        {
                            <button class="btn btn-danger btn-lg w-100 disabled" type="button">BU ÜRÜN SATILDI</button>
                        }
                        else
                        {
                            <div class="d-grid gap-2">
                                <button class="btn btn-primary btn-lg" type="button"><i class="fas fa-comment-dots"></i> Satıcıya Mesaj At</button>
                                <button class="btn btn-outline-success btn-lg" type="button"><i class="fas fa-tag"></i> Teklif Ver</button>
                            </div>
                        }
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>