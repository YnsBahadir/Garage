@model EntityLayer.Concrete.Product

@{
    ViewData["Title"] = "Ürün Detayı";
    Layout = "~/Views/Shared/_Layout.cshtml";

    // Yorum Formu için ID Taşıma
    ViewBag.i = Model.ProductID;
}

<div class="container mt-5 mb-5">
    <div class="card shadow">
        <div class="container-fluid">

            <div class="wrapper row">

                <div class="col-md-6 p-4 d-flex flex-column align-items-center justify-content-center bg-light">

                    <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "https://dummyimage.com/600x400/dee2e6/6c757d.jpg" : Model.ImageUrl)"
                         class="img-fluid rounded shadow-sm"
                         style="max-height: 500px; width: auto;" />

                    <div class="mt-4 text-center w-100 border-top pt-3">
                        <h4 class="fw-bold text-dark">
                            <i class="fas fa-map-marker-alt text-danger"></i> @Model.City
                        </h4>
                        <p class="text-muted mb-0">
                            <i class="fas fa-calendar-alt"></i> İlan Tarihi: @(((DateTime)Model.Date).ToString("dd MMMM yyyy"))
                        </p>
                    </div>

                </div>

                <div class="col-md-6 p-5">

                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="badge bg-secondary">Kategori: @Model.Category.CategoryName</span>
                    </div>

                    <h3 class="product-title display-6 fw-bold">@Model.Title</h3>

                    <div class="rating mb-3 text-warning">
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star-half-alt"></i>
                        <span class="text-muted small ms-2">(109 görüntülenme)</span>
                    </div>

                    <p class="product-description text-muted mb-4" style="min-height: 100px;">
                        @Model.Description
                    </p>

                    <h2 class="price fw-bold text-primary mb-4">@Model.Price ₺</h2>


                    <div class="seller-info p-3 bg-light rounded mb-4 border">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <img src="@(string.IsNullOrEmpty(Model.AppUser.ImageUrl) ? "https://ui-avatars.com/api/?name=" + Model.AppUser.NameSurname : Model.AppUser.ImageUrl)"
                                     class="rounded-circle border" width="60" height="60" style="object-fit: cover;">
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h5 class="mb-0 fw-bold">@Model.AppUser.Username</h5>

                                @if (!string.IsNullOrEmpty(Model.AppUser.PhoneNumber))
                                {
                                    <small class="text-success"><i class="fas fa-phone-alt"></i> @Model.AppUser.PhoneNumber</small>
                                }
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.AppUser.About))
                        {
                            <hr class="my-2" />
                            <p class="small text-muted mb-0 fst-italic">"@Model.AppUser.About"</p>
                        }
                    </div>


                    <div class="action">
                        @if (User.Identity.IsAuthenticated && Model.AppUser.Username == User.Identity.Name)
                        {
                            <div class="d-grid gap-2">
                                <a href="/Product/EditProduct/@Model.ProductID" class="btn btn-warning btn-lg">
                                    <i class="fas fa-edit"></i> İlanı Düzenle
                                </a>
                                <a href="/Product/DeleteProduct/@Model.ProductID"
                                   onclick="return confirm('Silmek istediğine emin misin?')"
                                   class="btn btn-outline-danger btn-lg">
                                    <i class="fas fa-trash"></i> İlanı Sil
                                </a>
                            </div>
                        }
                        else
                        {
                            @if (Model.IsSold)
                            {
                                <button class="btn btn-danger btn-lg w-100 disabled" type="button">BU ÜRÜN SATILDI</button>
                            }
                            else
                            {
                                <div class="d-grid gap-2">
                                    <a href="#yorumlar" class="btn btn-primary btn-lg"><i class="fas fa-comment-dots"></i> Satıcıya Soru Sor</a>
                                    <button type="button" class="btn btn-outline-success btn-lg" data-bs-toggle="modal" data-bs-target="#offerModal">
                                        <i class="fas fa-tag"></i> Teklif Ver
                                    </button>
                                </div>
                            }
                        }
                    </div>

                </div>
            </div>

            <div class="row mt-4 mb-4">
                <div class="col-12 px-5">
                    <hr />
                    <h3 id="yorumlar" class="fw-bold mb-4">Ürün Soru-Cevap</h3>

                    @await Html.PartialAsync("~/Views/ProductComment/CommentListByProduct.cshtml", Model.ProductComments ?? new List<EntityLayer.Concrete.ProductComment>())

                    <hr class="my-4" />

                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="bg-light p-4 rounded border">
                            @await Html.PartialAsync("~/Views/ProductComment/AddComment.cshtml")
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning text-center p-4">
                            <h5>Bu ilana yorum yapmak için giriş yapmalısınız.</h5>
                            <p>Yorumlarınız satıcı için değerlidir.</p>
                            <a href="/Login/Index" class="btn btn-dark mt-2">Giriş Yap</a>
                            <span class="mx-2">veya</span>
                            <a href="/Register/Index" class="btn btn-outline-dark mt-2">Kayıt Ol</a>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="offerModal" tabindex="-1" aria-labelledby="offerModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="offerModalLabel">Teklif Ver</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
                </div>
                <form action="/Product/MakeOffer" method="post">
                    <div class="modal-body">
                        <input type="hidden" name="id" value="@Model.ProductID" />

                        <p><strong>@Model.Title</strong> ürünü için teklifiniz nedir?</p>

                        <div class="mb-3">
                            <label for="offerPrice" class="col-form-label">Teklif Fiyatı (₺):</label>
                            <input type="number" class="form-control" id="offerPrice" name="OfferPrice" required min="1">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                        <button type="submit" class="btn btn-success">Teklifi Gönder</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>