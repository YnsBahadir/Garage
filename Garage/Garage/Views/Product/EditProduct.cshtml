@model EntityLayer.Concrete.Product
@{
    ViewData["Title"] = "İlanı Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary">
                    <h3 class="mb-0 text-white">İlanı Düzenle</h3>
                </div>
                <div class="card-body">

                    <form method="post">

                        <input type="hidden" name="ProductID" value="@Model.ProductID" />

                        <div class="mb-3">
                            <label>İlan Başlığı</label>
                            <input type="text" name="Title" value="@Model.Title" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label class="fw-bold">Kategori</label>
                            @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.v, new { @class = "form-select" })
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label>Fiyat (₺)</label>
                                <input type="text" name="Price" value="@Model.Price" class="form-control" required />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label>Şehir</label>
                                <input type="text" name="City" value="@Model.City" class="form-control" required />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label>Ürün Durumu (Mevcut: @Model.Condition)</label>
                            <select name="Condition" class="form-control">
                                <option value="Sıfır">Sıfır</option>
                                <option value="Az Kullanılmış">Az Kullanılmış</option>
                                <option value="Kullanılmış">Kullanılmış</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label>Görsel Linki</label>
                            <input type="text" name="ImageUrl" value="@Model.ImageUrl" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label>Açıklama</label>
                            <textarea name="Description" class="form-control" rows="4">@Model.Description</textarea>
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" name="IsSold" value="true" @(Model.IsSold ? "checked" : "") id="flexCheckDefault">
                            <label class="form-check-label" for="flexCheckDefault">
                                Ürün Satıldı
                            </label>
                            <input type="hidden" name="IsSold" value="false" />
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Değişiklikleri Kaydet</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>