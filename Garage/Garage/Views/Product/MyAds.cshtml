@using EntityLayer.Concrete
@model List<Product>

@{
    ViewData["Title"] = "İlanlarım";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .dashboard-card {
        border: none;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.05);
        background-color: #fff;
        overflow: hidden;
    }

    .card-header-custom {
        background-color: #1c1c1c;
        padding: 20px 25px;
        border-bottom: 4px solid #FFD700;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .btn-garage-yellow {
        background-color: #FFD700;
        color: #1c1c1c;
        font-weight: 700;
        border: none;
        padding: 8px 20px;
        border-radius: 8px;
        transition: all 0.3s;
    }

        .btn-garage-yellow:hover {
            background-color: #e6c200;
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(255, 215, 0, 0.3);
        }

    .table-custom thead th {
        background-color: #f8f9fa;
        color: #666;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.85rem;
        border-bottom: 2px solid #eee;
        padding: 15px;
    }

    .table-custom tbody td {
        padding: 15px;
        vertical-align: middle;
        border-bottom: 1px solid #f0f0f0;
        color: #333;
    }

    .table-custom tbody tr:hover {
        background-color: #fcfcfc;
    }

    .product-thumb {
        width: 60px;
        height: 60px;
        object-fit: cover;
        border-radius: 10px;
        border: 1px solid #eee;
    }

    .btn-action {
        width: 35px;
        height: 35px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 8px;
        transition: all 0.2s;
        border: 1px solid transparent;
    }

    .btn-action-view {
        background-color: #e3f2fd;
        color: #0d6efd;
    }

        .btn-action-view:hover {
            background-color: #0d6efd;
            color: #fff;
        }

    .btn-action-edit {
        background-color: #fff3cd;
        color: #ffc107;
    }

        .btn-action-edit:hover {
            background-color: #ffc107;
            color: #000;
        }

    .btn-action-delete {
        background-color: #f8d7da;
        color: #dc3545;
    }

        .btn-action-delete:hover {
            background-color: #dc3545;
            color: #fff;
        }

    /* Boş Durum */
    .empty-state {
        padding: 60px 20px;
        text-align: center;
    }

    .empty-icon {
        font-size: 4rem;
        color: #eee;
        margin-bottom: 20px;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-12">

            <div class="dashboard-card">

                <div class="card-header-custom">
                    <h4 class="mb-0 text-white fw-bold">
                        <i class="fas fa-boxes me-2 text-warning"></i> İlanlarım
                    </h4>
                    <a href="/Product/AddProduct" class="btn btn-garage-yellow btn-sm">
                        <i class="fas fa-plus me-1"></i> Yeni İlan Ekle
                    </a>
                </div>

                <div class="card-body p-0">

                    @if (Model.Count == 0)
                    {
                        <div class="empty-state">
                            <i class="fas fa-box-open empty-icon"></i>
                            <h5 class="fw-bold text-dark">Henüz hiç ilan vermediniz.</h5>
                            <p class="text-muted mb-4">Evinizdeki kullanmadığınız eşyaları satarak kazanç sağlayabilirsiniz.</p>
                            <a href="/Product/AddProduct" class="btn btn-outline-dark rounded-pill px-4">
                                İlk İlanını Oluştur
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-custom mb-0">
                                <thead>
                                    <tr>
                                        <th class="ps-4">Ürün</th>
                                        <th>Başlık</th>
                                        <th>Fiyat</th>
                                        <th>Yayın Tarihi</th>
                                        <th>Durum</th>
                                        <th class="text-end pe-4">İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="ps-4">
                                                <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "https://dummyimage.com/100x100/dee2e6/6c757d.jpg" : item.ImageUrl)"
                                                     class="product-thumb shadow-sm"
                                                     alt="Ürün Resmi"
                                                     onerror="this.src='https://placehold.co/100x100?text=Resim+Yok'">
                                            </td>

                                            <td>
                                                <div class="fw-bold text-dark">@item.Title</div>
                                            </td>

                                            <td>
                                                <span class="fw-bold text-dark">@item.Price.ToString("N0") ₺</span>
                                            </td>

                                            <td>
                                                <div class="d-flex align-items-center text-muted small">
                                                    <i class="far fa-calendar-alt me-2"></i> @item.Date.ToString("dd.MM.yyyy")
                                                </div>
                                            </td>

                                            <td>
                                                @if (item.IsSold)
                                                {
                                                    <span class="badge bg-secondary text-white px-3 py-2 rounded-pill">
                                                        <i class="fas fa-handshake me-1"></i> Satıldı
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success text-white px-3 py-2 rounded-pill">
                                                        <i class="fas fa-check-circle me-1"></i> Yayında
                                                    </span>
                                                }
                                            </td>

                                            <td class="text-end pe-4">
                                                <a href="/Product/ProductDetails/@item.ProductID" class="btn btn-action btn-action-view me-1" title="İlanı Görüntüle">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="/Product/EditProduct/@item.ProductID" class="btn btn-action btn-action-edit me-1" title="Düzenle">
                                                    <i class="fas fa-pen"></i>
                                                </a>
                                                <a href="/Product/DeleteProduct/@item.ProductID" class="btn btn-action btn-action-delete" title="Sil" onclick="return confirm('Bu ilanı silmek istediğinize emin misiniz?')">
                                                    <i class="fas fa-trash-alt"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>