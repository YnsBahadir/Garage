@using EntityLayer.Concrete
@model List<Product>

@{
    ViewData["Title"] = "Ana Sayfa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using DataAccessLayer.Concrete
@{
    // 1. Öne çıkarmak istediğin ürünün ID'sini buraya yaz
    int firsatUrunId = 3;

    // 2. Veritabanından o ürünü buluyoruz
    Context c = new Context();
    var firsatUrunu = c.Products.Find(firsatUrunId);
}

<style>
    .carousel-indicators button {
        width: 12px !important;
        height: 12px !important; 
        border-radius: 50%; 
        background-color: rgba(255, 255, 255, 0.5) !important;
        border: none !important; 
        margin: 0 6px !important; 
        transition: all 0.3s ease; 
    }

    .carousel-indicators .active {
        width: 25px !important;
        border-radius: 20px !important;
        background-color: #fff !important;
    }
</style>

<div id="mainCarousel" class="carousel slide mb-5 shadow" data-bs-ride="carousel">

    <div class="carousel-indicators">
        <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
        <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="3" aria-label="Slide 4"></button>
    </div>

    <div class="carousel-inner rounded">

        @if (firsatUrunu != null)
        {
            <div class="carousel-item active" data-bs-interval="5000">
                <div class="p-5 text-white d-flex align-items-center" style="background: linear-gradient(90deg, #ff9966 0%, #ff5e62 100%); height: 300px;">
                    <div class="container px-4">
                        <div class="row align-items-center">

                            <div class="col-md-7">
                                <h1 class="display-4 fw-bold">Günün Fırsat Ürünü: <span class="text-dark">@firsatUrunu.Title</span></h1>

                                <p class="lead my-3">Bu fiyata kaçmaz! Satıcı acil satıyor, detayları incele.</p>

                                <a href="/Product/ProductDetails/@firsatUrunu.ProductID" class="btn btn-light btn-lg fw-bold text-danger mt-2">
                                    <i class="fas fa-tag"></i> İlanı İncele
                                </a>
                            </div>

                            <div class="col-md-5 d-none d-md-block text-center">
                                <img src="@(string.IsNullOrEmpty(firsatUrunu.ImageUrl) ? "https://dummyimage.com/400x300/fff/000" : firsatUrunu.ImageUrl)"
                                     class="img-fluid shadow"
                                     style="max-height: 250px; border-radius: 15px; transform: rotate(-5deg); border: 4px solid white;"
                                     alt="@firsatUrunu.Title" />
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        }

        <div class="carousel-item" data-bs-interval="5000">
            <div class="p-5 text-white d-flex align-items-center" style="background: linear-gradient(90deg, #6a11cb 0%, #2575fc 100%); height: 300px;">
                <div class="container px-4">
                    <div class="row align-items-center">
                        <div class="col-md-7">
                            <h1 class="display-4 fw-bold">Güvenli Alışverişin Adresi: <span class="text-warning">GARAGE</span></h1>
                            <p class="lead my-3">Sıfır kadar hızlı, çok daha hesaplı! Cüzdanın güvende, alışverişin keyifli olsun.</p>
                            <a href="#products" class="btn btn-light btn-lg fw-bold text-primary mt-2">Hemen Keşfet</a>
                        </div>
                        <div class="col-md-5 d-none d-md-block text-center">
                            <i class="fas fa-shield-alt fa-9x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="carousel-item" data-bs-interval="5000">
            <div class="p-5 text-white d-flex align-items-center" style="background: linear-gradient(90deg, #f83600 0%, #f9d423 100%); height: 300px;">
                <div class="container px-4">
                    <div class="row align-items-center">
                        <div class="col-md-7">
                            <h1 class="display-4 fw-bold">Kullanmadığın Eşyalar Nakite Dönüşsün!</h1>
                            <p class="lead my-3">Evinin bir köşesinde bekleyen eşyaları Garage ile saniyeler içinde ilana koy.</p>

                            <a href="@(User.Identity.IsAuthenticated ? "/Product/AddProduct" : "/Login/Index")"
                               class="btn btn-light btn-lg fw-bold text-danger mt-2">
                                Ücretsiz İlan Ver
                            </a>

                        </div>
                        <div class="col-md-5 d-none d-md-block text-center">
                            <i class="fas fa-camera fa-9x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="carousel-item" data-bs-interval="5000">
            <div class="p-5 text-white d-flex align-items-center" style="background: linear-gradient(90deg, #11998e 0%, #38ef7d 100%); height: 300px;">
                <div class="container px-4">
                    <div class="row align-items-center">
                        <div class="col-md-7">
                            <h1 class="display-4 fw-bold">En Yeni Teknolojiler Burada</h1>
                            <p class="lead my-3">Telefon, Bilgisayar ve Oyun Konsollarında kaçırılmayacak fırsatlar seni bekliyor.</p>
                            <a href="/Product/Index?id=1" class="btn btn-light btn-lg fw-bold text-success mt-2">Elektronik İlanları</a>
                        </div>
                        <div class="col-md-5 d-none d-md-block text-center">
                            <i class="fas fa-laptop fa-9x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
                
    </div>

</div>
<div class="container" id="products">


<div class="container">
    <div class="row">

        <div class="col-lg-3">
            <h4 class="my-4">Kategoriler</h4>
            <div class="list-group">

                @if (ViewBag.kategoriler != null)
                {
                    <a href="/Product/Index" class="list-group-item list-group-item-action fw-bold">
                        Tüm Ürünler
                    </a>
                    @foreach (var item in (List<Category>)ViewBag.kategoriler)
                    {
                        <a href="/Product/Index?id=@item.CategoryID" class="list-group-item list-group-item-action">
                            @item.CategoryName
                        </a>
                    }
                }
                else
                {
                    <p class="text-muted">Kategori bulunamadı.</p>
                }

            </div>

            <div class="card mt-4 mb-4">
                <div class="card-header bg-warning text-white">Öne Çıkanlar</div>
                <div class="card-body">
                    <p class="card-text">Günün fırsat ürünlerini kaçırmayın!</p>
                </div>
            </div>
        </div>
        <div class="col-lg-9">
            <div class="row gx-4 gx-lg-5 row-cols-1 row-cols-md-2 row-cols-xl-3 justify-content-center">

                @if (Model.Count == 0)
                {
                    <div class="alert alert-warning w-100 text-center">
                        Aradığınız kriterde ürün bulunamadı.
                    </div>
                }

                @foreach (var item in Model)
                {
                    <div class="col mb-5">
                        <div class="card h-100 shadow-sm border-0">

                            @if (item.IsSold)
                            {
                                <div class="badge bg-danger text-white position-absolute" style="top: 0.5rem; right: 0.5rem; z-index: 10;">Satıldı</div>
                            }
                            else
                            {
                                <div class="badge bg-success text-white position-absolute" style="top: 0.5rem; right: 0.5rem; z-index: 10;">Satışta</div>
                            }

                            <a href="/Product/ProductDetails/@item.ProductID">
                                <img class="card-img-top" src="@(string.IsNullOrEmpty(item.ImageUrl) ? "https://dummyimage.com/450x300/dee2e6/6c757d.jpg" : item.ImageUrl)" alt="..." style="height: 200px; object-fit: cover;" />
                            </a>

                            <div class="card-body p-4">
                                <div class="text-center">
                                    <h5 class="fw-bolder">
                                        <a href="/Product/ProductDetails/@item.ProductID" class="text-decoration-none text-dark">
                                            @item.Title
                                        </a>
                                    </h5>
                                    <p class="text-muted small mb-2"><i class="fas fa-map-marker-alt"></i> @item.City</p>
                                    <span class="fs-5 fw-bold text-primary">@item.Price.ToString("N0") ₺</span>
                                </div>
                            </div>

                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>