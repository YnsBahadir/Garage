@using EntityLayer.Concrete
@model List<ProductComment>

@{
    var currentUsername = User.Identity.IsAuthenticated ? User.Identity.Name : "";
}

<div class="comments-area">
    <h4 class="mb-4">Satıcıya Sorulan Sorular (@Model.Count(x => x.ParentCommentID == null))</h4>

    @if (Model.Count == 0)
    {
        <p class="text-muted">Henüz soru sorulmamış. Aklına takılanı satıcıya sor!</p>
    }
    else
    {
        foreach (var question in Model.Where(x => x.ParentCommentID == null || x.ParentCommentID == 0).OrderByDescending(x => x.Date))
        {
            <div class="card mb-3 border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-2">
                        <div class="flex-shrink-0">
                            <img src="https://ui-avatars.com/api/?name=@question.AppUser.NameSurname&background=random" class="rounded-circle" width="40">
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="mb-0 fw-bold">@question.AppUser.NameSurname <span class="text-muted small fw-normal">- @(((DateTime)question.Date).ToString("dd MMM yyyy"))</span></h6>
                            <p class="card-text mt-2">@question.Content</p>
                        </div>
                    </div>

                    @foreach (var answer in Model.Where(x => x.ParentCommentID == question.CommentID))
                    {
                        <div class="d-flex align-items-start mt-3 p-3 bg-light rounded" style="margin-left: 50px; border-left: 4px solid #0d6efd;">
                            <div class="flex-shrink-0">
                                <span class="badge bg-primary">Satıcı</span>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="mb-0 fw-bold text-primary">@answer.AppUser.NameSurname</h6>
                                <p class="small text-muted mb-0">@answer.Content</p>
                                <small class="text-muted" style="font-size: 10px">@(((DateTime)answer.Date).ToString("dd MMM HH:mm"))</small>
                            </div>
                        </div>
                    }

                    @if (question.Product != null && question.Product.AppUser != null && question.Product.AppUser.Username == currentUsername)
                    {
                        <div class="mt-3 ms-5">
                            <button class="btn btn-sm btn-outline-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#replyForm_@question.CommentID">
                                <i class="fas fa-reply"></i> Yanıtla
                            </button>

                            <div class="collapse mt-2" id="replyForm_@question.CommentID">
                                <form action="/ProductComment/AddComment" method="post">
                                    <input type="hidden" name="ProductID" value="@question.ProductID" />
                                    <input type="hidden" name="ParentCommentID" value="@question.CommentID" />

                                    <div class="input-group">
                                        <input type="text" name="Content" class="form-control form-control-sm" placeholder="Yanıtınız..." required />
                                        <button class="btn btn-sm btn-primary" type="submit">Gönder</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    }
</div>