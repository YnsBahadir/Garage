<div class="comment-form">
    <h4>Bir Yorum Bırakın</h4>

    <form class="form-contact comment_form" method="post" action="/ProductComment/AddComment">

        <div class="row">
            <input type="hidden" name="ProductID" value="@ViewBag.i" />

            <div class="col-12">
                <div class="form-group">
                    <textarea class="form-control w-100" name="Content" id="Content" cols="30" rows="9" placeholder="Yorumunuzu buraya yazın..."></textarea>
                </div>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Yorum Yap</button>
        </div>
    </form>
</div>