<div class="comment-form">
    <h4>Satıcıya Soru Sorun</h4>

    <form method="post" action="/ProductComment/AddComment">
        <input type="hidden" name="ProductID" value="@ViewBag.i" />
        <div class="form-group">
            <label class="fw-bold mb-2">Satıcıya Soru Sor</label>
            <textarea class="form-control" name="Content" rows="3" placeholder="Ürün durumu, pazarlık payı vb. hakkında soru sor..." required></textarea>
        </div>

        <button type="submit" class="btn btn-dark mt-3">
            <i class="fas fa-paper-plane"></i> Soruyu Gönder
        </button>
    </form>
</div>