<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 2. El Satış Platformu</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
        <div class="container">

            <a class="navbar-brand fw-bold" href="/Product/Index" style="font-size: 24px;">
                <span class="text-warning">GARAGE</span> 2.EL
            </a>

            <form action="/Product/Index" method="get" class="d-none d-lg-flex mx-auto" style="width: 45%;">
                <div class="input-group">
                    <input type="text" name="search" class="form-control border-0" placeholder="Ne arıyorsun? (Örn: iPhone)" aria-label="Ara">

                    <select name="city" class="form-select border-0 bg-light" style="max-width: 150px; border-left: 1px solid #ccc;">
                        <option selected value="">Tüm Şehirler</option>
                        <option value="İstanbul">İstanbul</option>
                        <option value="Ankara">Ankara</option>
                        <option value="İzmir">İzmir</option>
                        <option value="Bursa">Bursa</option>
                        <option value="Antalya">Antalya</option>
                        <option value="Adana">Adana</option>
                        <option value="Konya">Konya</option>
                    </select>

                    <button class="btn btn-warning" type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </form>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">

                <ul class="navbar-nav ms-auto mb-2 mb-lg-0 align-items-center">

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item dropdown ms-2">
                            <a class="nav-link dropdown-toggle fw-bold text-white" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user-circle"></i> @User.Identity.Name
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="/User/Index">Profilim</a></li>
                                <li><a class="dropdown-item" href="/Product/MyAds">İlanlarım</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-danger" href="/Login/LogOut">Çıkış Yap</a></li>
                            </ul>
                        </li>

                        <li class="nav-item ms-3">
                            <a class="nav-link btn btn-warning text-dark px-3 fw-bold" href="/Product/AddProduct">
                                <i class="fas fa-plus"></i> İLAN VER
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item ms-2">
                            <a class="nav-link text-white" href="/Login/Index">Giriş Yap</a>
                        </li>
                        <li class="nav-item ms-2">
                            <a class="nav-link btn btn-outline-light px-3" href="/Register/Index">Kayıt Ol</a>
                        </li>
                    }
                </ul>

            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5 bg-light py-4">
        <div class="container text-center">
            &copy; 2025 - Garage 2.El Satış Platformu - <a href="#">Gizlilik</a>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>