<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 2. El Satış Platformu</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        #cityResultList .list-group-item {
            cursor: pointer;
        }

            #cityResultList .list-group-item:hover {
                background-color: #f8f9fa;
            }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
        <div class="container">

            <a class="navbar-brand fw-bold" href="/Product/Index" style="font-size: 24px;">
                <span class="text-warning">GARAGE</span> 2.EL
            </a>

            <form action="/Product/Index" method="get" class="d-none d-lg-flex mx-auto" style="width: 55%;">
                <div class="input-group">

                    <input type="text"
                           name="search"
                           class="form-control border-0"
                           placeholder="Ürün veya Satıcı ara (Örn: iPhone, Ahmet)..."
                           aria-label="Ara"
                           value="@Context.Request.Query["search"]"
                           style="width: 50%;">

                    <div class="position-relative" style="width: 35%;">
                        <input type="text"
                               id="citySearchInput"
                               class="form-control border-0 bg-light"
                               placeholder="Şehir Seç"
                               autocomplete="off"
                               value="@Context.Request.Query["city"]"
                               style="border-left: 1px solid #ccc; border-radius: 0;">

                        <input type="hidden" name="city" id="hiddenCityInput" value="@Context.Request.Query["city"]">

                        <div id="cityResultList" class="list-group position-absolute w-100 shadow" style="z-index: 9999; display:none; max-height: 300px; overflow-y: auto;">
                        </div>
                    </div>

                    <button class="btn btn-warning" type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </form>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0 align-items-center">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item dropdown ms-2">
                            <a class="nav-link dropdown-toggle fw-bold text-white" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user-circle"></i> @User.Identity.Name
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="/User/Index">Profilim</a></li>
                                <li><a class="dropdown-item" href="/Product/MyAds">İlanlarım</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-danger" href="/Login/LogOut">Çıkış Yap</a></li>
                            </ul>
                        </li>
                        <li class="nav-item ms-3">
                            <a class="btn btn-warning text-dark px-3 fw-bold" href="/Product/AddProduct">
                                <i class="fas fa-plus"></i> İLAN VER
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item ms-2">
                            <a class="nav-link text-white" href="/Login/Index">Giriş Yap</a>
                        </li>
                        <li class="nav-item ms-2">
                            <a class="nav-link btn btn-outline-light px-3" href="/Register/Index">Kayıt Ol</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5 bg-light py-4">
        <div class="container text-center">
            &copy; 2025 - Garage 2.El Satış Platformu - <a href="#">Gizlilik</a>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var cities = @Html.Raw(Json.Serialize(siraliSehirler));
            const cityInput = document.getElementById('citySearchInput');
            const hiddenInput = document.getElementById('hiddenCityInput');
            const resultsBox = document.getElementById('cityResultList');

            function showResults(filteredCities) {
                resultsBox.innerHTML = '';
                if (filteredCities.length > 0) {
                    filteredCities.forEach(city => {
                        const item = document.createElement('a');
                        item.classList.add('list-group-item', 'list-group-item-action');
                        item.textContent = city;
                        item.addEventListener('click', function (e) {
                            e.preventDefault();
                            cityInput.value = city;
                            hiddenInput.value = city;
                            resultsBox.style.display = 'none';
                        });
                        resultsBox.appendChild(item);
                    });
                    resultsBox.style.display = 'block';
                } else {
                    resultsBox.style.display = 'none';
                }
            }

            cityInput.addEventListener('input', function() {
                const inputText = this.value.toLocaleLowerCase('tr').trim();
                if(inputText === "") {
                    hiddenInput.value = "";
                    resultsBox.style.display = 'none';
                    return;
                }
                const filtered = cities.filter(city => {
                    const cityLower = city.toLocaleLowerCase('tr');
                    return cityLower.includes(inputText) || inputText.includes(cityLower);
                });
                showResults(filtered);
            });

            document.addEventListener('click', function(e) {
                if (!cityInput.contains(e.target) && !resultsBox.contains(e.target)) {
                    resultsBox.style.display = 'none';
                }
            });
        });
    </script>
</body>
</html>