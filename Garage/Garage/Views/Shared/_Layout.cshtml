<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Garage</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style>
        :root {
            --garage-black: #121212;
            --garage-dark: #1c1c1c;
            --garage-yellow: #FFD700;
            --garage-gray: #2c2c2c;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fa;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .navbar-garage {
            background-color: var(--garage-black);
            border-bottom: 3px solid var(--garage-yellow);
            padding: 1rem 0;
        }

        .navbar-brand {
            font-weight: 800;
            letter-spacing: 1px;
            color: #fff !important;
        }

            .navbar-brand span {
                color: var(--garage-yellow);
            }

        .search-container {
            background-color: #fff;
            border-radius: 8px;
            overflow: hidden;
            display: flex;
            padding: 4px;
        }

        .search-input-main {
            border: none;
            background: transparent;
        }

            .search-input-main:focus {
                box-shadow: none;
                background: #fdfdfd;
            }

        .city-input-wrapper {
            border-left: 1px solid #ddd;
            position: relative;
        }

        .btn-search {
            background-color: var(--garage-yellow);
            color: var(--garage-black);
            border-radius: 6px !important;
            font-weight: bold;
            padding: 0 20px;
            transition: all 0.3s;
        }

            .btn-search:hover {
                background-color: #e6c200;
            }

        #cityResultList {
            z-index: 1050;
            max-height: 300px;
            overflow-y: auto;
            border-top: 1px solid #eee;
            background-color: white;
        }

            #cityResultList .list-group-item {
                cursor: pointer;
                font-size: 0.9rem;
                border: none;
                border-bottom: 1px solid #f0f0f0;
            }

                #cityResultList .list-group-item:hover {
                    background-color: #f8f9fa;
                    color: var(--garage-black);
                    font-weight: 600;
                }

        .btn-ilan-ver {
            background-color: var(--garage-yellow);
            color: var(--garage-black);
            font-weight: 700;
            border: none;
            box-shadow: 0 4px 6px rgba(255, 215, 0, 0.2);
            transition: transform 0.2s;
        }

            .btn-ilan-ver:hover {
                background-color: #ffea70;
                color: var(--garage-black);
                transform: translateY(-2px);
            }

        .garage-footer {
            background-color: var(--garage-dark);
            color: #aaa;
            margin-top: auto;
            border-top: 1px solid #333;
        }

            .garage-footer a {
                color: var(--garage-yellow);
                text-decoration: none;
            }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark navbar-garage sticky-top shadow-sm">
        <div class="container">

            <a class="navbar-brand d-flex align-items-center gap-2" href="/Product/Index">
                <div>
                    <span>GARAGE</span> 2.EL
                </div>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <form action="/Product/Index" method="get" class="d-none d-lg-flex mx-auto col-lg-6">
                <div class="input-group search-container shadow-sm">

                    <span class="input-group-text bg-white border-0 text-muted ps-3"><i class="fas fa-search"></i></span>
                    <input type="text"
                           name="search"
                           class="form-control search-input-main"
                           placeholder="Ne arıyorsun? (Örn: BMW, iPhone)..."
                           value="@Context.Request.Query["search"]">

                    <div class="city-input-wrapper position-relative" style="width: 35%;">
                        <span class="position-absolute top-50 start-0 translate-middle-y ms-2 text-muted" style="z-index: 5;">
                            <i class="fas fa-map-marker-alt"></i>
                        </span>

                        <input type="text"
                               name="city"
                               id="citySearchInput"
                               class="form-control search-input-main ps-4"
                               placeholder="Şehir"
                               autocomplete="off"
                               value="@Context.Request.Query["city"]">

                        <div id="cityResultList" class="list-group position-absolute w-100 shadow rounded-bottom mt-1" style="display:none;">
                        </div>
                    </div>

                    <button class="btn btn-search" type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </form>

            <div class="collapse navbar-collapse flex-grow-0" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">

                    <li class="nav-item d-lg-none w-100 mb-3 mt-2">
                        <form action="/Product/Index" method="get" class="d-flex">
                            <input type="text" name="search" class="form-control me-2" placeholder="Ürün ara...">
                            <button class="btn btn-warning" type="submit">Ara</button>
                        </form>
                    </li>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item dropdown ms-lg-3">
                            <a class="nav-link dropdown-toggle text-white fw-medium" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <img src="https://ui-avatars.com/api/?name=@User.Identity.Name&background=FFD700&color=000" class="rounded-circle me-1" width="30" height="30">
                                @User.Identity.Name
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark dropdown-menu-end shadow" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="/User/Index"><i class="fas fa-user me-2"></i>Profilim</a></li>
                                <li><a class="dropdown-item" href="/Product/MyAds"><i class="fas fa-list me-2"></i>İlanlarım</a></li>
                                <li><hr class="dropdown-divider border-secondary"></li>
                                <li><a class="dropdown-item text-danger" href="/Login/LogOut"><i class="fas fa-sign-out-alt me-2"></i>Çıkış Yap</a></li>
                            </ul>
                        </li>
                        <li class="nav-item ms-3 d-none d-lg-block">
                            <a class="btn btn-ilan-ver px-4 rounded-pill" href="/Product/AddProduct">
                                <i class="fas fa-plus me-1"></i> İLAN VER
                            </a>
                        </li>
                        <li class="nav-item d-lg-none mt-2">
                            <a class="nav-link text-warning fw-bold" href="/Product/AddProduct"><i class="fas fa-plus"></i> İLAN VER</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item ms-lg-2">
                            <a class="nav-link text-white" href="/Login/Index">Giriş Yap</a>
                        </li>
                        <li class="nav-item ms-lg-2">
                            <a class="btn btn-outline-warning text-white px-3 rounded-pill" href="/Register/Index">Kayıt Ol</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4 mb-5">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="garage-footer py-4 mt-auto">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6 text-center text-md-start">
                    <span class="fw-bold text-white">GARAGE</span> <small class="text-muted">© 2025 Tüm Hakları Saklıdır.</small>
                </div>
                <div class="col-md-6 text-center text-md-end mt-2 mt-md-0">
                    <a href="#" class="me-3 small">Kullanım Koşulları</a>
                    <a href="#" class="small">Gizlilik Politikası</a>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {

            var cities = @Html.Raw(Json.Serialize(siraliSehirler));

            const cityInput = document.getElementById('citySearchInput');

            const resultsBox = document.getElementById('cityResultList');

            if(cityInput && resultsBox) {

                function showResults(filteredCities) {
                    resultsBox.innerHTML = '';

                    if (filteredCities.length > 0) {
                        filteredCities.forEach(city => {
                            const item = document.createElement('div');
                            item.classList.add('list-group-item', 'list-group-item-action');
                            item.textContent = city;

                            item.onclick = function () {
                                cityInput.value = city;
                                resultsBox.style.display = 'none';
                            };
                            resultsBox.appendChild(item);
                        });
                        resultsBox.style.display = 'block';
                    } else {
                        resultsBox.style.display = 'none';
                    }
                }

                function handleSearch() {
                    const inputText = cityInput.value.toLocaleLowerCase('tr').trim();

                    if(inputText === "") {
                        showResults(cities);
                    }
                    else {
                        const filtered = cities.filter(city => {
                            return city.toLocaleLowerCase('tr').includes(inputText);
                        });
                        showResults(filtered);
                    }
                }

                cityInput.addEventListener('input', handleSearch);
                cityInput.addEventListener('focus', handleSearch);
                cityInput.addEventListener('click', handleSearch);

                document.addEventListener('click', function(e) {
                    if (!cityInput.contains(e.target) && !resultsBox.contains(e.target)) {
                        resultsBox.style.display = 'none';
                    }
                });
            }
        });
    </script>
</body>
</html>