@page
@model IndexModel

@{
    ViewData["Title"] = "Garage";
}

<!-- Bootstrap 5 ve ikon kütüphanesi -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

<!-- Hero / Arama Alanı -->
<section class="bg-light py-5 text-center">
    <div class="container">
        <h1 class="fw-bold mb-3">Aradığın İkinci El Ürünü Bul!</h1>
        <p class="text-muted mb-4">Elektronikten mobilyaya, modadan otomobile kadar binlerce ilan seni bekliyor.</p>
        <form class="d-flex justify-content-center">
            <input type="text" class="form-control w-50 me-2" placeholder="Ürün veya kategori ara...">
            <button class="btn btn-primary">Ara</button>
        </form>
    </div>
</section>

<!-- Filtre ve Ürün Listesi -->
<section class="container my-5">
    <div class="row">
        <!-- Sol filtre alanı -->
        <div class="col-lg-3 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="fw-bold mb-3">Kategoriler</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><a href="#" class="text-decoration-none text-dark">Elektronik</a></li>
                        <li class="list-group-item"><a href="#" class="text-decoration-none text-dark">Ev & Mobilya</a></li>
                        <li class="list-group-item"><a href="#" class="text-decoration-none text-dark">Giyim</a></li>
                        <li class="list-group-item"><a href="#" class="text-decoration-none text-dark">Otomobil</a></li>
                        <li class="list-group-item"><a href="#" class="text-decoration-none text-dark">Kitap</a></li>
                        <li class="list-group-item"><a href="#" class="text-decoration-none text-dark">Diğer</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Ürün kartları -->
        <div class="col-lg-9">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 class="fw-bold">Popüler İlanlar</h4>
                <select class="form-select w-auto">
                    <option>En Yeni</option>
                    <option>Fiyat: Düşükten Yükseğe</option>
                    <option>Fiyat: Yüksekten Düşüğe</option>
                </select>
            </div>

            <div class="row g-4">
                <!-- Tek ürün kartı -->
                @for (int i = 0; i < 8; i++)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="card shadow-sm border-0 h-100">
                            <img src="~/images/Chiyayo931x951.jpg" class="card-img-top" alt="Ürün Resmi">
                            <div class="card-body">
                                <h6 class="fw-bold">Ürün Adı @(i + 1)</h6>
                                <p class="text-muted small mb-2">Kategori: Elektronik</p>
                                <p class="fw-bold text-primary mb-3">₺@(1000 + i * 150)</p>
                                <a href="#" class="btn btn-outline-primary w-100">Detayları Gör</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

<!-- Footer -->
<footer class="bg-dark text-light py-4 mt-5">
    <div class="container text-center">
        <div class="row">
            <div class="col-md-4 mb-3">
                <h5>İkinciElim</h5>
                <p class="small">Güvenli, hızlı ve kolay 2. el alışveriş platformu.</p>
            </div>
            <div class="col-md-4 mb-3">
                <h6>Bağlantılar</h6>
                <ul class="list-unstyled">
                    <li><a href="#" class="text-light text-decoration-none">Hakkımızda</a></li>
                    <li><a href="#" class="text-light text-decoration-none">İletişim</a></li>
                    <li><a href="#" class="text-light text-decoration-none">Gizlilik Politikası</a></li>
                </ul>
            </div>
            <div class="col-md-4">
                <h6>Bizi Takip Et</h6>
                <a href="#" class="text-light me-3"><i class="bi bi-facebook fs-4"></i></a>
                <a href="#" class="text-light me-3"><i class="bi bi-instagram fs-4"></i></a>
                <a href="#" class="text-light"><i class="bi bi-twitter fs-4"></i></a>
            </div>
        </div>
        <hr class="border-secondary mt-4">
        <p class="small mb-0">&copy; @DateTime.Now.Year İkinciElim. Tüm hakları saklıdır.</p>
    </div>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
